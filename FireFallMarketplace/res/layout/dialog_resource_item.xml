<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="@dimen/interface_margin_small">

        <EditText
            android:id="@+id/dialog_resource_item_add_value"
            android:layout_width="@dimen/dialog_resource_item_add_button_width"
            android:layout_height="@dimen/dialog_resource_item_button_height"
            android:layout_marginRight="@dimen/interface_margin_small"
            style="@style/EditTextHoloDark"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/dialog_resource_item_add_button"
            android:layout_width="@dimen/dialog_resource_item_button_small_width"
            android:layout_height="@dimen/dialog_resource_item_button_height"
            android:background="@drawable/style_button"
            android:text="@string/dialog_resource_item_add_value"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dialog_resource_item_button_text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_resource_item_show_chart_button"
        android:layout_width="@dimen/dialog_resource_item_button_width"
        android:layout_height="@dimen/dialog_resource_item_button_height"
        android:background="@drawable/style_button"
        android:text="@string/dialog_resource_item_show_chart"
        android:textColor="@color/text_white"
        android:textSize="@dimen/dialog_resource_item_button_text_size" />

</LinearLayout>